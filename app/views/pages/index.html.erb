<div class="pages index">
  <h2>Pages list</h2>
  <%= link_to("New page",{:action=>'new'}, :class => 'action new') %>
  <div><%= pluralize(@pages.size,'page') %></div>
  <table class="listing", summary="Pages list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Subject</th>
      <th>Page</th>
      <th>Visible</th>
      <th>Sections</th>
      <th>Permalink</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page|%>
        <tr class="<%= cycle('odd','even') %>">
          <td><%=page.position%></td>
          <td><%=page.subject.name if page.subject%></td>
          <td><%=page.name%></td>
          <td class="center"><%= status_tag(page.visible)%></td>
          <td class="center"><%= page.sections.size %></td>
          <td><%=page.permalink%></td>
          <td class="action">
            <%=link_to('Show',{:action=>'show',:id=>page.id}, :class=>'action show')%>
            <%=link_to('Edit',{:action=>'edit', :id=>page.id}, :class=>'action edit')%>
            <%=link_to('Delete',{:action=>'delete', :id=>page.id}, :class=>'action delete')%>

          </td>
        </tr>
    <%end%>
  </table>
</div>