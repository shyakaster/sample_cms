<div class="section index">
  <h2>Sections list</h2>
  <%= link_to("New page",{:action=>'new'}, :class => 'action new') %>
  <div><%= pluralize(@sections.size,'section') %></div>
  <table class="listing", summary="Sections list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Page</th>
      <th>Section</th>
      <th>Visible</th>
      <th>Section edits</th>
      <th>Content</th>
      <th>Content type</th>
      <th>Actions</th>
    </tr>
    <% @sections.each do |section|%>
        <tr class="<%= cycle('odd','even') %>">
          <td><%=section.position%></td>
          <td><%= section.page.name if section.page%></td>
          <td><%=section.name%></td>
          <td class="center"><%=status_tag(section.visible)%></td>
          <td class="center"><%=section.section_edits.size%></td>
          <td><%=section.content%></td>
          <td><%=section.content_type%></td>
          <td class="action">
            <%=link_to('Show',{:action=>'show',:id=>section.id}, :class=>'action show')%>
            <%=link_to('Edit',{:action=>'edit', :id=>section.id}, :class=>'action edit')%>
            <%=link_to('Delete',{:action=>'delete', :id=>section.id}, :class=>'action delete')%>

          </td>
        </tr>
    <%end%>
  </table>
</div>